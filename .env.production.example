# ===========================================
# FlotteQ - Production Environment Variables
# ===========================================
# IMPORTANT: Copy this file to .env.production and fill in the values

# Database Configuration
DB_USER=flotteq_prod
DB_NAME=flotteq_production
REDIS_PASSWORD=CHANGE_ME_RANDOM_PASSWORD

# JWT Secrets (Generate with: openssl rand -base64 32)
JWT_ACCESS_SECRET=CHANGE_ME_32_CHARS_MIN
JWT_REFRESH_SECRET=CHANGE_ME_32_CHARS_MIN
JWT_PARTNER_SECRET=CHANGE_ME_32_CHARS_MIN
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d
PARTNER_TOKEN_EXPIRY=7d

# Stripe Configuration (Production keys)
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_STRIPE_PUBLISHABLE_KEY

# CORS & Frontend URLs
CORS_ORIGIN=https://app.flotteq.com,https://partner.flotteq.com,https://driver.flotteq.com,https://admin.flotteq.com
FRONTEND_CLIENT_URL=https://app.flotteq.com
PARTNER_FRONTEND_URL=https://partner.flotteq.com
APP_URL=https://api.flotteq.com

# Vite Build-time Variables (for frontends)
VITE_API_URL=https://api.flotteq.com
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_STRIPE_PUBLISHABLE_KEY

# Security
BCRYPT_ROUNDS=12

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/*,application/pdf

# Email Configuration (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@flotteq.com
SMTP_PASSWORD=CHANGE_ME_EMAIL_PASSWORD
EMAIL_FROM=noreply@flotteq.com
